<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_shop_details_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="info.mayankag.parlorbeacon.ShopDetails"
            tools:showIn="@layout/app_bar_shop_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/LLShopDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopkeeperImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/shopkeeper_image_content_description"
                android:onClick="onClickEditShopkeeperImage"
                android:src="@drawable/ic_npi"
                app:border_color="#000000"
                app:border_width="1dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/shop_front_image_content_description"
                android:onClick="onClickEditShopImage"
                android:src="@drawable/ic_nfi"
                app:border_color="#000000"
                app:border_width="1dp"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/LLShopDetails"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/ic_edit"
            android:contentDescription="@string/edit_shop_details_content_description"
            android:onClick="onClickEditShopDetails"/>

        <TextView
            android:id="@+id/shopKeeperName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shopkeeper_name_text"/>

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopKeeperName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_name_text"/>

        <TextView
            android:id="@+id/shopKeeperEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shopkeeper_email_id_text"/>

        <TextView
            android:id="@+id/shopPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopKeeperEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_phone_no_text"/>

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_address_text"/>

        <TextView
            android:id="@+id/shopCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_city_text"/>

        <TextView
            android:id="@+id/shopZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopCity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_zip_code_text"/>

        <TextView
            android:id="@+id/shopOpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopZipCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_open_time_text"/>

        <TextView
            android:id="@+id/shopCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopOpenTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/shop_close_time_text"/>
    </RelativeLayout>
</ScrollView>
